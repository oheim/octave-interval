%!shared
%!  ## Disable warnings when creating NaIs
%!  warning ("off", "interval:NaI")
%! ## Test library imports
%!function s = to_string (x)
%!    if (isnumeric (x))
%!        s = num2str (x);
%!    elseif (isa (x, 'infsup'))
%!        s = intervaltotext (x);
%!    else
%!        # x probably is a char.
%!        s = x;
%!    endif
%!endfunction
%
%!function assert_equals (x, y)
%!    if (isa (x, "infsup"))
%!        assert (eq (x, y));
%!    else
%!        assert (isequal (x, y));
%!    endif
%!endfunction
%
%!function n = decval (dec)
%! n = find (strcmp (dec, {"ill", "trv", "def", "dac", "com"}));
%!endfunction

%!test "minimal_inf_test";
%! assert_equals (...
%!    inf (infsup ()), ...
%!    inf)
%! assert_equals (...
%!    inf (infsup (-inf, inf)), ...
%!    -inf)
%! assert_equals (...
%!    inf (infsup (1.0, 2.0)), ...
%!    1.0)
%! assert_equals (...
%!    inf (infsup (-3.0, -2.0)), ...
%!    -3.0)
%! assert_equals (...
%!    inf (infsup (-inf, 2.0)), ...
%!    -inf)
%! assert_equals (...
%!    inf (infsup (-inf, 0.0)), ...
%!    -inf)
%! assert_equals (...
%!    inf (infsup (-inf, -0.0)), ...
%!    -inf)
%! assert_equals (...
%!    inf (infsup (-2.0, inf)), ...
%!    -2.0)
%! assert_equals (...
%!    inf (infsup (0.0, inf)), ...
%!    -0.0)
%! assert_equals (...
%!    inf (infsup (-0.0, inf)), ...
%!    -0.0)
%! assert_equals (...
%!    inf (infsup (-0.0, 0.0)), ...
%!    -0.0)
%! assert_equals (...
%!    inf (infsup (0.0, -0.0)), ...
%!    -0.0)
%! assert_equals (...
%!    inf (infsup (0.0, 0.0)), ...
%!    -0.0)
%! assert_equals (...
%!    inf (infsup (-0.0, -0.0)), ...
%!    -0.0)

%!test "minimal_inf_dec_test";
%! assert_equals (...
%!    inf (infsup ()), ...
%!    inf)
%! assert_equals (...
%!    inf (infsupdec (-inf, inf, "def")), ...
%!    -inf)
%! assert_equals (...
%!    inf (infsupdec (1.0, 2.0, "com")), ...
%!    1.0)
%! assert_equals (...
%!    inf (infsupdec (-3.0, -2.0, "trv")), ...
%!    -3.0)
%! assert_equals (...
%!    inf (infsupdec (-inf, 2.0, "dac")), ...
%!    -inf)
%! assert_equals (...
%!    inf (infsupdec (-inf, 0.0, "def")), ...
%!    -inf)
%! assert_equals (...
%!    inf (infsupdec (-inf, -0.0, "trv")), ...
%!    -inf)
%! assert_equals (...
%!    inf (infsupdec (-2.0, inf, "trv")), ...
%!    -2.0)
%! assert_equals (...
%!    inf (infsupdec (0.0, inf, "def")), ...
%!    -0.0)
%! assert_equals (...
%!    inf (infsupdec (-0.0, inf, "trv")), ...
%!    -0.0)
%! assert_equals (...
%!    inf (infsupdec (-0.0, 0.0, "dac")), ...
%!    -0.0)
%! assert_equals (...
%!    inf (infsupdec (0.0, -0.0, "trv")), ...
%!    -0.0)
%! assert_equals (...
%!    inf (infsupdec (0.0, 0.0, "trv")), ...
%!    -0.0)
%! assert_equals (...
%!    inf (infsupdec (-0.0, -0.0, "trv")), ...
%!    -0.0)

%!test "minimal_sup_test";
%! assert_equals (...
%!    sup (infsup ()), ...
%!    -inf)
%! assert_equals (...
%!    sup (infsup (-inf, inf)), ...
%!    inf)
%! assert_equals (...
%!    sup (infsup (1.0, 2.0)), ...
%!    2.0)
%! assert_equals (...
%!    sup (infsup (-3.0, -2.0)), ...
%!    -2.0)
%! assert_equals (...
%!    sup (infsup (-inf, 2.0)), ...
%!    2.0)
%! assert_equals (...
%!    sup (infsup (-inf, 0.0)), ...
%!    0.0)
%! assert_equals (...
%!    sup (infsup (-inf, -0.0)), ...
%!    0.0)
%! assert_equals (...
%!    sup (infsup (-2.0, inf)), ...
%!    inf)
%! assert_equals (...
%!    sup (infsup (0.0, inf)), ...
%!    inf)
%! assert_equals (...
%!    sup (infsup (-0.0, inf)), ...
%!    inf)
%! assert_equals (...
%!    sup (infsup (-0.0, 0.0)), ...
%!    0.0)
%! assert_equals (...
%!    sup (infsup (0.0, -0.0)), ...
%!    0.0)
%! assert_equals (...
%!    sup (infsup (0.0, 0.0)), ...
%!    0.0)
%! assert_equals (...
%!    sup (infsup (-0.0, -0.0)), ...
%!    0.0)

%!test "minimal_sup_dec_test";
%! assert_equals (...
%!    sup (infsup ()), ...
%!    -inf)
%! assert_equals (...
%!    sup (infsupdec (-inf, inf, "def")), ...
%!    inf)
%! assert_equals (...
%!    sup (infsupdec (1.0, 2.0, "com")), ...
%!    2.0)
%! assert_equals (...
%!    sup (infsupdec (-3.0, -2.0, "trv")), ...
%!    -2.0)
%! assert_equals (...
%!    sup (infsupdec (-inf, 2.0, "dac")), ...
%!    2.0)
%! assert_equals (...
%!    sup (infsupdec (-inf, 0.0, "def")), ...
%!    0.0)
%! assert_equals (...
%!    sup (infsupdec (-inf, -0.0, "trv")), ...
%!    0.0)
%! assert_equals (...
%!    sup (infsupdec (-2.0, inf, "trv")), ...
%!    inf)
%! assert_equals (...
%!    sup (infsupdec (0.0, inf, "def")), ...
%!    inf)
%! assert_equals (...
%!    sup (infsupdec (-0.0, inf, "trv")), ...
%!    inf)
%! assert_equals (...
%!    sup (infsupdec (-0.0, 0.0, "dac")), ...
%!    +0.0)
%! assert_equals (...
%!    sup (infsupdec (0.0, -0.0, "trv")), ...
%!    +0.0)
%! assert_equals (...
%!    sup (infsupdec (0.0, 0.0, "trv")), ...
%!    +0.0)
%! assert_equals (...
%!    sup (infsupdec (-0.0, -0.0, "trv")), ...
%!    +0.0)

%!test "minimal_mid_test";
%! assert_equals (...
%!    mid (infsup (-inf, inf)), ...
%!    0.0)
%! assert_equals (...
%!    mid (infsup ("-0x1.FFFFFFFFFFFFFp1023", "+0x1.FFFFFFFFFFFFFp1023")), ...
%!    0.0)
%! assert_equals (...
%!    mid (infsup (0.0, 2.0)), ...
%!    1.0)
%! assert_equals (...
%!    mid (infsup (2.0, 2.0)), ...
%!    2.0)
%! assert_equals (...
%!    mid (infsup (-2.0, 2.0)), ...
%!    0.0)
%! assert_equals (...
%!    mid (infsup ("-0X0.0000000000002P-1022", "0X0.0000000000001P-1022")), ...
%!    0.0)
%! assert_equals (...
%!    mid (infsup ("-0X0.0000000000001P-1022", "0X0.0000000000002P-1022")), ...
%!    0.0)

%!test "minimal_mid_dec_test";
%! assert_equals (...
%!    mid (infsupdec (-inf, inf, "def")), ...
%!    0.0)
%! assert_equals (...
%!    mid (infsupdec ("-0x1.FFFFFFFFFFFFFp1023", "+0x1.FFFFFFFFFFFFFp1023", "trv")), ...
%!    0.0)
%! assert_equals (...
%!    mid (infsupdec (0.0, 2.0, "com")), ...
%!    1.0)
%! assert_equals (...
%!    mid (infsupdec (2.0, 2.0, "dac")), ...
%!    2.0)
%! assert_equals (...
%!    mid (infsupdec (-2.0, 2.0, "trv")), ...
%!    0.0)
%! assert_equals (...
%!    mid (infsupdec ("-0X0.0000000000002P-1022", "0X0.0000000000001P-1022", "trv")), ...
%!    0.0)
%! assert_equals (...
%!    mid (infsupdec ("-0X0.0000000000001P-1022", "0X0.0000000000002P-1022", "trv")), ...
%!    0.0)

